<body class="bg-light">

    <div class="container">
      <form class="needs-validation" novalidate>
        
        <div class="row">
          <div class="col-md-4 order-md-2">
            <div style="min-height: 40px;">FOTO (copia y pega)</div>
            <canvas style="border:1px solid grey;" id="photo-output" width="200" height="200"></canvas>
          </div>
          <div class="col-md-8 order-md-1">
            <h4 class="mb-3">Datos en la VCARD</h4>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="firstName">Nombre</label>
                <input type="text" class="form-control" id="firstName" value="{{givenName}}" required>
                <div class="invalid-feedback">
                  El Nombre es requerido.
                </div>
              </div>
              <div class="col-md-6 mb-3">
                <label for="lastName">Apellidos</label>
                <input type="text" class="form-control" id="lastName" value="{{sn}}" required>
                <div class="invalid-feedback">
                  Valor requerido.
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="username">Username</label>
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text">@</span>
                  </div>
                  <input type="text" class="form-control" id="username" value="{{sAMAccountName}}" required>
                  <div class="invalid-feedback" style="width: 100%;">
                    El nombre de usuario es requerido.
                  </div>
                </div>
              </div>

              <div class="col-md-6 mb-3">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" value="{{mail}}">
                <div class="invalid-feedback">
                  Introduce un email valido.
                </div>
              </div>

            </div>  
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="worktel">Teléfono del trabajo</label>
                <input type="text" class="form-control" id="worktel" value="{{worktel}}" required>
                <div class="invalid-feedback">
                  El teléfono del trabajo es requerido.
                </div>
              </div>
              <div class="col-md-6 mb-3">
                <label for="hometel">Teléfono de casa</label>
                <input type="text" class="form-control" id="hometel" value="{{hometel}}" required>
                <div class="invalid-feedback">
                  El teéfono de casa es requerido.
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <div class="row">
          <div class="col-md-4 order-md-2">
            <div style="min-height: 40px;">QR</div>
            <canvas style="border:1px solid grey;" id="qr-output" width="200" height="200"></canvas>
          </div>
          <div class="col-md-8 order-md-1">
            <div class="row">
              <div class="col-md-12">
                <label for="workdir">Dirección del Trabajo</label>
                <textarea class="form-control" id="workdir" value="{{workdir}}" required rows="3"></textarea>
                <div class="invalid-feedback">
                  La dirección del trabajo es requerida.
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <label for="homedir">Dirección de Casa</label>
                <textarea class="form-control" id="homedir" value="{{homedir}}" required rows="3"></textarea>
                <div class="invalid-feedback">
                  La dirección de casa es requerida.
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-8 order-md-1">
            <button class="btn btn-primary btn-lg btn-block" type="submit">Conseguir QR</button>
          </div>
        </div>
        
      </form>



      <footer class="my-5 pt-5 text-muted text-center text-small">
        <p class="mb-1">&copy; 2024 AMAEM</p>
        <ul class="list-inline">
          <li class="list-inline-item"><a href="#">Privacy</a></li>
          <li class="list-inline-item"><a href="#">Terms</a></li>
          <li class="list-inline-item"><a href="#">Support</a></li>
        </ul>
      </footer>
    </div>
</body>
